---
interface Props {
  label: string;
  options: { id: string; value: string; label: string }[];
  name: string;
  required?: boolean;
}

const { label, options, name, required } = Astro.props;
---

<fieldset class="flex flex-col items-center">
  <legend class="mb-2">{label}{required && " *"}</legend>

  <div class="flex flex-col items-start gap-1">
    {
      options.map((option) => (
        <div>
          <input
            type="radio"
            id={option.id}
            name={name}
            value={option.value}
            required={required}
            class="accent-secondary cursor-pointer focus-visible:ring-1 focus-visible:outline-none"
          />
          <label for={option.id} class="cursor-pointer">
            {option.label}
          </label>
        </div>
      ))
    }
  </div>
</fieldset>
