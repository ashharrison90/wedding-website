---
import "../styles/global.css";
interface Props {
	title: string;
}
const { title } = Astro.props;
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="text-orange-400 bg-zinc-50 p-4">
		<nav class="flex justify-end gap-2 text-emerald-800">
			<a href="/">Home</a>
			<a href="/accommodation">Accommodation</a>
			<a href="/travel">Travel</a>
			<a href="/q-and-a">Q&A</a>
			<a href="/rsvp">RSVP</a>
		</nav>
		<div class="max-w-6xl mx-auto pt-2 pb-2">
			<slot />
		</div>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
