---
import "../styles/global.css";
import NavBar from "../components/NavBar/NavBar.astro";
import DiscoBall from "../components/DiscoBall.astro";
interface Props {
  title: string;
}
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <NavBar />
    <div class="px-4 pb-4">
      <main class="mx-auto max-w-6xl pt-4">
        <div
          class="flex flex-wrap items-center justify-center gap-y-2 justify-self-center pb-4"
        >
          <div class="flex flex-col items-center gap-4">
            <h1
              class="font-hero max-w-md text-center text-8xl [text-shadow:_5px_5px_0_var(--color-secondary)]"
            >
              Ash & Anna
            </h1>
            <span class="text-contrast-light text-2xl">18 · 07 · 2026</span>
          </div>
          <DiscoBall />
        </div>
        <slot />
      </main>
    </div>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
