---
interface Props {
  id: string;
  name: string;
  label: string;
}

const { id, name, label } = Astro.props;
---
<div class="flex flex-col gap-1 max-w-md w-full px-2">
  <label for={id}>{label}</label>
  <input class="bg-white border-2 rounded-sm border-secondary py-1 px-2" type="text" id={id} name={name} />
</div>